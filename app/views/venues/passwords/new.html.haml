.container
  .panel.text-center
    %h3
      = t('devise.passwords.forgot_password',default: "Have you forgotten your password?")
    
  .col-md-6.col-md-offset-3.jumbotron
    .alert-danger
      = devise_error_messages!
    = form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, role: 'form'}) do |f|
      .form-group
        = f.label :email
        = f.email_field :email, autofocus: true,  :class => 'form-control' 
      .form-group
        = f.submit t('devise.passwords.send_reset_instructions',default: "Send me reset password instructions") , :class=>'btn btn-primary btn-lg btn-block'
    = render "venues/shared/links"