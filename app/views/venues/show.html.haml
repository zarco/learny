.container.main
  .col-md-9
    / Pictures and Desc
    .row
      .col-md-12
        .panel.panel-primary
          .panel-heading
            %h3.panel-title
              = @venue.name
          .panel-body
            .carousel.slide#carousel_venue_pictures{"data-ride" => "carousel"}
              %ol.carousel-indicators
                -@venue.venue_pictures.count.times do |counter|
                  %li{'data-slide-to' => counter, 'data-target' => '#carousel_venue_pictures'}
              .carousel-inner
                -@venue.venue_pictures.each_with_index do |picture,index| 
                  .item{:class => ("active" if index == 0)}
                    .panel-body
                      %img{:alt => "Picture", :src => picture.avatar_url, :class => "thumbnail"}
              %ul.pager
                %li
                  %a.left{:href => "#carousel_venue_pictures", 'data-slide' => 'prev' } 
                    %span.glyphicon.glyphicon-chevron-left
                    Previo
                %li
                  %a.right{:href => "#carousel_venue_pictures", 'data-slide' => 'next' } 
                    Siguiente
                    %span.glyphicon.glyphicon-chevron-right
          .venue-desc
            %h4
              = @venue.description
    / Mapa
    .row
      .col-md-12
        .panel.panel-primary
          .panel-heading
            %h3.panel-title Mapa
          .panel-body
            %img{:src =>"https://maps.googleapis.com/maps/api/staticmap?center=#{@venue.latitude},#{@venue.longitude}&markers=color:red%7Clabel:L%7C#{@venue.latitude},#{@venue.longitude}&zoom=15&size=800x400"}


  .col-md-3
    .row
      / Contact
      #pnl-badges.panel.panel-primary
        .panel-heading
          %h3.panel-title
            = Venue.human_attribute_name(:contact)
        .panel-body    
          -unless @venue.contact.nil?
            = @venue.contact.name
            %br
            = @venue.contact.mail
            %br
            = @venue.contact.phone

    / Address
    .row
      #pnl-badges.panel.panel-primary
        .panel-heading
          %h3.panel-title
            = Venue.human_attribute_name(:address)
        .panel-body
          = @venue.address

          
    / Facilities
    .row
      #pnl-badges.panel.panel-primary
        .panel-heading
          %h3.panel-title
            = Venue.human_attribute_name(:facilities)
        .panel-body
          =render partial: 'shared/words2iconlist', locals: {comma_separated_words:@venue.facilities}


    / Horario
    .row
      #pnl-badges.panel.panel-primary
        .panel-heading
          %h3.panel-title
            = Venue.human_attribute_name(:business_hours)
        .panel-body
          = @venue.business_hours


    / Referencias
    .row
      .panel.panel-primary.comentarios
        .panel-heading
          %h3.panel-title Comentarios Recientes
        .panel-body


/ Pictures Modal
#myModal.modal.fade{:role => "dialog", :tabindex => "-1"}
  .modal-dialog
    .modal-content
      .modal-header
        %button.close{"data-dismiss" => "modal", :type => "button"} Ã—
        %h3.modal-title 
          = @venue.name
      .modal-body
        %img{:src => "#", :id => "picture_modal"}
      .modal-footer
        %button.btn.btn-default{"data-dismiss" => "modal"} Close
        
