.container
  .page-header.text-center
    %h3
      = t('devise.confirmations.did_not_received',default: "Didn't receive confirmation instructions?")
    
  .col-md-6.col-md-offset-3.jumbotron
    .alert-danger
      = devise_error_messages!
    = form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post,role: 'form' }) do |f|
      .form-group
        = f.label :email
        = f.email_field :email, autofocus: true, :class => 'form-control' 
      .form-group
        = f.submit t('devise.confirmations.send_confirmation',default: "Resend confirmation instructions"), :class=>'btn btn-primary btn-lg btn-block' 
    = render "venues/shared/links"