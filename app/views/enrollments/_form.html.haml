= form_for @enrollment do |f|
  - if @enrollment.errors.any?
    #error_explanation
      %h2= "#{pluralize(@enrollment.errors.count, "error")} prohibited this enrollment from being saved:"
      %ul
        - @enrollment.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :workshop_id
    = f.number_field :workshop_id
  .field
    = f.label :student_id
    = f.number_field :student_id
  .actions
    = f.submit 'Save'
