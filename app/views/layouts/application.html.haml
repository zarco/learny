!!!
%html
  %head
    %meta{:charset => "utf-8"}/
    %meta{:content => "IE=edge", "http-equiv" => "X-UA-Compatible"}/
    %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}/
    %meta{:content => meta_description, :name => "description"}/
    %meta{:content => meta_author, :name => "author"}/
    %meta{:content => meta_keywords, :name => "Keywords"}/
    %title= full_title(yield(:title))
    = stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true
    = javascript_include_tag "application", "data-turbolinks-track" => true
    = csrf_meta_tags
    
    / HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries
    /[if lt IE 9]
    %a{:href => "#Top"}
  %body
    %header
      =render 'layouts/navigation'
    %main{:role => 'main'}
      .main
        = render 'layouts/messages'
        = yield
      
      
      %footer
        %hr/
        %p.pull-right
          = link_to '<span class="glyphicon-class glyphicon glyphicon-chevron-up"></span> Back to top'.html_safe, '#Top'
        %p
          \© #{Time.now.year}#{site_name}
          \•
          \#{link_to "Privacy", privacy_path}
          \•
          \#{link_to "Terms", terms_path}
          
        -if !(expert_signed_in? or venue_signed_in? or student_signed_in? or administrator_signed_in?)
          %p
            #{link_to "Administration", new_administrator_session_path}
        