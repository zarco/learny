              =link_to edit_expert_registration_path, class: 'btn btn-warning btn-lg btn-block' do
                =t('edit', default: 'Edit')
          .col-md-8
            %blockquote
              %h2
                = @expert.full_name
              %h3
                = @expert.occupation
        .row.container
          %p
            = @expert.profile
    .panel.panel-primary
