                %p
                  %a{:href => "#"} 12 asistentes
                  
  .col-md-4
    .panel.panel-primary
      .panel-heading
        %h3.panel-title Contacto
      .panel-body
        .container
          .row
            =link_to @expert.website, @expert.website, :target => 'blank' if !@expert.website.empty?
          .row
            -if !@expert.facebook_link.empty?
              =link_to @expert.facebook_link, :class=>'btn btn-social-icon btn-facebook', :target => 'blank' do
                %i.fa.fa-facebook
            -if !@expert.twitter_link.empty?
              =link_to @expert.twitter_link, :class=>'btn btn-social-icon btn-twitter', :target => 'blank' do
                %i.fa.fa-twitter
            -if !@expert.linkedin_link.empty?
              =link_to @expert.linkedin_link, :class=>'btn btn-social-icon btn-linkedin',:target => 'blank' do
                %i.fa.fa-linkedin
            -if !@expert.google_plus_link.empty?
              =link_to @expert.google_plus_link,  :class=>'btn btn-social-icon btn-google-plus',:target => 'blank' do
                %i.fa.fa-google-plus

    .panel.panel-primary
      .panel-heading
        %h3.panel-title 
          = Expert.human_attribute_name(:areas_of_expertise)
      .panel-body
        =@expert.areas_of_expertise