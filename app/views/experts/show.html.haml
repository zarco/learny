.container
  .col-md-8
    .jumbotron
      .row.well
        .row
          .col-md-4
            .panel.panel-danger
              .panel-body
                %img.featurette-image.img-responsive{:alt => "Profile", :src => @expert.avatar_url}
          .col-md-8
            %blockquote
              %h2
                = @expert.full_name
              %h3
                = @expert.occupation
        .row.container
          %p
            = @expert.profile
    .panel.panel-primary
      .panel-heading
        %h3.panel-title Proximos talleres
      .panel-body
        -@expert.next_workshops.each do |workshop|
          .col-md-6.col-lg-4
            %blockquote
              %h4
                =link_to workshop.name, workshop
              %h5
                =link_to workshop.venue.name, '#'
              %p
                =workshop.reservation.fmt_starts_at
    
          
      
    .panel.panel-primary
      .panel-heading
        %h3.panel-title Ãšltimos talleres
      .panel-body
        -@expert.previous_workshops.each do |workshop|
          .col-md-6.col-lg-4
            %blockquote
              %h4
                =link_to workshop.name, workshop
              %h5
                =link_to workshop.venue.name, '#'
              %p
                =workshop.reservation.fmt_starts_at
    
                        
  .col-md-4
  
    -if current_expert == @expert
      .panel.panel-warning
        .panel-body
          =link_to edit_expert_registration_path, class: 'btn btn-warning btn-lg btn-block' do
            =t('edit', default: 'Edit')
  
    .panel.panel-primary
      .panel-heading
        %h3.panel-title 
          =Expert.human_attribute_name(:website)
      .panel-body
        .row
          .container
            =link_to @expert.website, @expert.website, :target => 'blank' if !@expert.website.empty?

    .panel.panel-primary
      .panel-heading
        %h3.panel-title Redes Sociales
      .panel-body
        .container
          .row
            -if !@expert.facebook_link.empty?
              =link_to @expert.facebook_link, :class=>'btn btn-social-icon btn-facebook', :target => 'blank' do
                %i.fa.fa-facebook
            -if !@expert.twitter_link.empty?
              =link_to @expert.twitter_link, :class=>'btn btn-social-icon btn-twitter', :target => 'blank' do
                %i.fa.fa-twitter
            -if !@expert.linkedin_link.empty?
              =link_to @expert.linkedin_link, :class=>'btn btn-social-icon btn-linkedin',:target => 'blank' do
                %i.fa.fa-linkedin
            -if !@expert.google_plus_link.empty?
              =link_to @expert.google_plus_link,  :class=>'btn btn-social-icon btn-google-plus',:target => 'blank' do
                %i.fa.fa-google-plus

    .panel.panel-primary
      .panel-heading
        / /TODO Generar nube de palabras
        %h3.panel-title 
          = Expert.human_attribute_name(:areas_of_expertise)
      .panel-body
        =@expert.areas_of_expertise