.row
  .col-md-6
    = link_to "/auth/facebook?u=2", {:class => "btn btn-block btn-social btn-md btn-facebook"} do
      %i.fa.fa-facebook
      = t('views.legends.sign_up_with_facebook',default: 'Sign up with Facebook')
//.col-md-6
